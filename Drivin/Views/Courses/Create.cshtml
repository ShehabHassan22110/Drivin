@model Drivin.BL.ViewModels.CoursesVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<center>
	<h1>Create</h1>
</center>

<form asp-controller="Courses" asp-action="Create" enctype="multipart/form-data">


	<div class="form-group ">
		<label for="Header" class="form-control-label">Header  </label>
		<input placeholder="Enter Your Header" type="text" class="form-control " asp-for="Header">
	</div>
	<div class="form-group ">
		<label for="Caption" class="form-control-label">Caption  </label>
		<input placeholder="Add Caption" type="text" class="form-control " asp-for="Caption">
	</div>
	<div class="form-group ">
		<label for="Price" class="form-control-label">Price  </label>
		<input placeholder="Add Price" type="text" class="form-control " asp-for="Price">
	</div>
	<div class="form-group">
		<label for="Photo">Photo</label>
		<input type="file" class="form-control-file form-control height-auto" asp-for="Photo">
	</div>


	<br />
	<input type="submit" value="Save" class="btn btn-success" />


</form>