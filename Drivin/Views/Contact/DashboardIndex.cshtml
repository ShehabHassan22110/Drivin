@model IEnumerable<Drivin.BL.ViewModels.ContactVM>

@{
    ViewData["Title"] = "DashboardIndex";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<center>
    <h1>Dashboard Index</h1>

</center>





<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row clearfix">
        <div class="col-md-12">



            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Contact Data</h5>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered font-weight-bold text-center">
                            <thead>
                                <tr>
                                    <th scope="col">Header</th>
                                    <th scope="col">Caption</th>

                                    <th scope="col">Details</th>
                                    <th scope="col">Update</th>
                                    <th scope="col">Delete</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Header</td>
                                        <td>@item.Caption</td>


                                        <td><a asp-controller="Contact" asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a></td>
                                        <td><a asp-controller="Contact" asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">Update</a></td>
                                        <td><a asp-controller="Contact" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>