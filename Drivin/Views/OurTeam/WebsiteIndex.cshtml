@model IEnumerable<Drivin.BL.ViewModels.OurTeamVM>
@{
    ViewData["Title"] = "WebsiteIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Page Header Start -->
<div class="container-fluid page-header py-6 my-6 mt-0 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center">
        <h1 class="display-4 text-white animated slideInDown mb-4">@SharedLocalizer["Our Team"]</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="#">@SharedLocalizer["Home"]</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">@SharedLocalizer["Pages"]</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">@SharedLocalizer["Our Team"]</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Team Start -->
<div class="container-xxl py-6">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h6 class="text-primary text-uppercase mb-2">@SharedLocalizer["Meet The Team"]</h6>
            <h1 class="display-6 mb-4">@SharedLocalizer["We Have Great Experience Of Driving"]</h1>
        </div>
        <div class="row g-0 team-items">
            @foreach (var item in Model)
           {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item position-relative">
                        <div class="position-relative">
                            <img class="img-fluid" src="~/Imgs/@item.PhotoName" alt="">
                            <div class="team-social text-center">
                                <a class="btn btn-square btn-outline-primary border-2 m-1" href=""><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-square btn-outline-primary border-2 m-1" href=""><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-square btn-outline-primary border-2 m-1" href=""><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                        <div class="bg-light text-center p-4">
                            <h5 class="mt-2">@item.Name</h5>
                            <span>@SharedLocalizer["Trainer"]</span>
                        </div>
                    </div>
                </div>
            }
         

        </div>
    </div>
</div>
<!-- Team End -->