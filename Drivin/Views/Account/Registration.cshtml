@model Drivin.BL.ViewModels.RegistrationVM

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}






<!DOCTYPE html>
<html>
<head>
	<!-- Basic Page Info -->
	<meta charset="utf-8">
	<title>DeskApp - Bootstrap Admin Dashboard HTML Template</title>

	<!-- Site favicon -->
	<link rel="apple-touch-icon" sizes="180x180" href="~/Dashboard/vendors/images/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="~/Dashboard/vendors/images/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="~/Dashboard/vendors/images/favicon-16x16.png">

	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<!-- Google Font -->
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
	<!-- CSS -->
	<link rel="stylesheet" type="text/css" href="~/Dashboard/vendors/styles/core.css">
	<link rel="stylesheet" type="text/css" href="~/Dashboard/vendors/styles/icon-font.min.css">
	<link rel="stylesheet" type="text/css" href="~/Dashboard/vendors/styles/style.css">

	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-119386393-1"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag() { dataLayer.push(arguments); }
		gtag('js', new Date());

		gtag('config', 'UA-119386393-1');
	</script>
</head>
<body class="login-page">
	<div class="login-header box-shadow">
		<div class="container-fluid d-flex justify-content-between align-items-center">
			<div class="brand-logo">
				<a href="login.html">
					<img src="~/Dashboard/vendors/images/deskapp-logo.svg" alt="">
				</a>
			</div>
			<div class="login-menu">
				<ul>
					<li><a asp-controller="Home" asp-action="Index">Drivin</a></li>
				</ul>
			</div>
		</div>
	</div>
	<div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-md-6 col-lg-7">
					<img src="~/Dashboard/vendors/images/login-page-img.png" alt="">
				</div>
				<div class="col-md-6 col-lg-5">
					<div class="login-box bg-white box-shadow border-radius-10">
						<div class="login-title">
							<h2 class="text-center text-primary">Create New Account</h2>
						</div>
						<form asp-controller="Account" asp-action="Registration">
							<div class="input-group custom">
								<input type="text" class="form-control form-control-lg" placeholder="UserName" asp-for="UserName">

								<div class="input-group-append custom">
									<span class="input-group-text"><i class="icon-copy dw dw-user1"></i></span>
								</div>
							</div>
							<span class="text-danger" asp-validation-for="UserName"> </span>
							<div class="input-group custom">
								<input type="email" class="form-control form-control-lg" placeholder="Email" asp-for="Email">

								<div class="input-group-append custom">
									<span class="input-group-text"><i class="icon-copy dw dw-user1"></i></span>
								</div>
							</div>
							<span class="text-danger" asp-validation-for="Email"> </span>

							<div class="input-group custom">
								<input type="password" class="form-control form-control-lg" placeholder="Password" asp-for="Password">

								<div class="input-group-append custom">
									<span class="input-group-text"><i class="dw dw-padlock1"></i></span>
								</div>
							</div>
							<span class="text-danger" asp-validation-for="Password"> </span>
							<div class="input-group custom">
								<input type="password" class="form-control form-control-lg" placeholder="ConfirmPassword" asp-for="ConfirmPassword">

								<div class="input-group-append custom">
									<span class="input-group-text"><i class="dw dw-padlock1"></i></span>
								</div>
							</div>
							<span class="text-danger" asp-validation-for="ConfirmPassword"> </span>

							<div class="row pb-30">
								<div class="col-6">
									<div class="custom-control custom-checkbox">
									</div>
								</div>
								<div class="col-6">
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12">
									<div class="input-group mb-0">
										<!--
											use code for form submit
											<input class="btn btn-primary btn-lg btn-block" type="submit" value="Sign In">
										-->
										@*										<a class="btn btn-primary btn-lg btn-block" href="index.html">Sign In</a>
										*@										<input type="submit" value="Sign Up" class="btn btn-primary btn-lg btn-block" />
									</div>

								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- js -->
	<script src="~/Dashboard/vendors/scripts/core.js"></script>
	<script src="~/Dashboard/vendors/scripts/script.min.js"></script>
	<script src="~/Dashboard/vendors/scripts/process.js"></script>
	<script src="~/Dashboard/vendors/scripts/layout-settings.js"></script>
</body>
</html>