@model IEnumerable<Drivin.BL.ViewModels.AboutVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<center>
	<h1>About Index</h1>

</center>


   

            <div class="container-fluid" >
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row clearfix">
                    <div class="col-md-12">



                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Employee Datatable</h5>
                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered font-weight-bold text-center">
                                        <thead>
                                            <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Header</th>
                                    <th scope="col">Caption</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Point1</th>
                                    <th scope="col">Point2</th>
                                    <th scope="col">Point3</th>
                                    <th scope="col">Point4</th>
                                                <th scope="col">Image</th>
                                                <th scope="col">Details</th>
                                                <th scope="col">Update</th>
                                                <th scope="col">Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Id</td>
                                                    <td>@item.Header</td>
                                                    <td>@item.Caption</td>
                                                    <td>@item.Phone</td>
                                                    <td>@item.Point1</td>
                                                    <td>@item.Point2</td>
                                                    <td>@item.Point3</td>
                                                    <td>@item.Point4</td>
                                                    <td><img style="border-radius:50%" width="100" height="100" src="~/Imgs/@item.PhotoName" /></td>
                                                    <td><a asp-controller="About" asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a></td>
                                                    <td><a asp-controller="About" asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">Update</a></td>
                                                    <td><a asp-controller="About" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>

                                                </tr>
                                            }
                                        </tbody>
                                   
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>

