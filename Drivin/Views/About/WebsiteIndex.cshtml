@model IEnumerable<Drivin.BL.ViewModels.AboutVM>

@{
    ViewData["Title"] = "WebsiteIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-6 my-6 mt-0 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center">
        <h1 class="display-4 text-white animated slideInDown mb-4">@SharedLocalizer["About Us"]</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="#">@SharedLocalizer["Home"]</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">@SharedLocalizer["Pages"]</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">@SharedLocalizer["About"]</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- About Start -->
<div class="container-xxl py-6">
        <div class="container">
            <div class="row g-5">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="position-relative overflow-hidden ps-5 pt-5 h-100" style="min-height: 400px;">
                        <img class="position-absolute w-100 h-100" src="~/Imgs/@item.PhotoName" alt="" style="object-fit: cover;">
                        <img class="position-absolute top-0 start-0 bg-white pe-3 pb-3" src="~/Website/img/about-2.jpg" alt="" style="width: 200px; height: 200px;">
                    </div>
                </div>
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="h-100">
                        <h6 class="text-primary text-uppercase mb-2">@SharedLocalizer[""]</h6>
                        <h1 class="display-6 mb-4">@item.Header</h1>
                        <p>@item.Caption</p>
                        <p>@item.Caption</p>
                        <div class="row g-2 mb-4 pb-2">
                            <div class="col-sm-6">
                                <i class="fa fa-check text-primary me-2"></i>@item.Point1
                            </div>
                            <div class="col-sm-6">
                                <i class="fa fa-check text-primary me-2"></i>@item.Point2
                            </div>
                            <div class="col-sm-6">
                                <i class="fa fa-check text-primary me-2"></i>@item.Point3
                            </div>
                            <div class="col-sm-6">
                                <i class="fa fa-check text-primary me-2"></i>@item.Point4
                            </div>
                        </div>
                        <div class="row g-4">
                            <div class="col-sm-6">
                                <a class="btn btn-primary py-3 px-5" href="">@SharedLocalizer["Read More"]</a>
                            </div>
                            <div class="col-sm-6">
                                <a class="d-inline-flex align-items-center btn btn-outline-primary border-2 p-2" href="tel:+0123456789">
                                    <span class="flex-shrink-0 btn-square bg-primary">
                                        <i class="fa fa-phone-alt text-white"></i>
                                    </span>
                                    <span class="px-3">@item.Phone</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
    <!-- About End -->

