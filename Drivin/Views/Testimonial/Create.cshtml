@model Drivin.BL.ViewModels.TestimonialVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<center>
	<h1>Create</h1>
</center>

<form asp-controller="Testimonial" asp-action="Create" enctype="multipart/form-data">


	<div class="form-group ">
		<label for="Name" class="form-control-label">Name  </label>
		<input placeholder="Enter Your Name" type="text" class="form-control " asp-for="Name">
	</div>
	<div class="form-group ">
		<label for="Comment" class="form-control-label">Comment  </label>
		<input placeholder="Add Comment" type="text" class="form-control " asp-for="Comment">
	</div>
	<div class="form-group">
		<label for="Photo">Photo</label>
		<input type="file" class="form-control-file form-control height-auto" asp-for="Photo">
	</div>


	<br />
	<input type="submit" value="Save" class="btn btn-success" />


</form>